/*task3 css*/
body {
    margin: 0;
    padding: 0;
  }
  
  .container {
    position: relative;
    width: 600px; /* Replace with your desired width */
    height: 400px; /* Replace with your desired height */
    border: 1px solid #ccc; /* Optional: Just for visual reference */
    margin: 50px auto; /* Optional: Center the container */
    padding: 10px; /* Add some padding to create space for positioning */
  }
  
  img {
    position: absolute;
    top: 10px;
    right: 10px;
    
  }
  
  p.bottom-left {
    position: absolute;
    bottom: 15px;
    left: 15px;
    margin: 0;
  }
  
  p.centered {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    margin: 0;
  }
  
